{
  "name": "zup-arena-server",
  "version": "0.1.0",
  "description": "The game server for Zup! Arena",
  "author": {
    "name": "Oleg Babenko",
    "email": "majerkravchuk@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BabenkoOleg/zup-arena-server.git"
  },
  "license": "MIT",
  "apidoc": {
    "name": "Zup! Arena Server API",
    "title": "Zup! Arena | Documentation",
    "url": "http://zup-arena.ru",
    "template": {
      "forceLanguage": "en"
    }
  },
  "scripts": {
    "start": "node src/server.js",
    "db-seeds": "node src/seeds.js",
    "watch-node": "nodemon src/server.js",
    "eslint": "eslint",
    "watch-eslint": "node node_modules/eslint-watch/bin/esw -w",
    "watch": "concurrently -k -p \"[{name}]\" -n \"EsLint,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-eslint\" \"npm run watch-node\""
  },
  "dependencies": {
    "bluebird": "^3.5.2",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^6.1.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.3.9",
    "morgan": "^1.9.1",
    "nodemon": "^1.18.4",
    "steam-web-api2": "^2.0.3",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "concurrently": "^4.0.1",
    "eslint": "^5.7.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-watch": "^4.0.2"
  }
}
